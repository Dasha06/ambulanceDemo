<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="poliklinikaDemo.AddPatientWindow"
        Title="AddPatientWindow">
    <DockPanel Margin="15">
        <StackPanel 
            DockPanel.Dock="Top"
            Orientation="Horizontal" Spacing="15">
            <TextBlock Name="FioDoctorsTextBlock"/>
            <TextBlock Name="DateAndTimeTextBlock"/>
        </StackPanel>
        <StackPanel Margin="15">
        <TextBlock Text="Данные пациента"/>
        <Grid ColumnDefinitions="*,5*"
              RowDefinitions="*,*,*,*,*,*">
            
            <TextBlock Text="Фамилия:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" 
                     Name="FirstNamePatientTextBox" Width="200" 
                     HorizontalAlignment="Left" Margin="0,5"/>
            
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Имя:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     Name="SecondNamePatientTextBox" Width="200" 
                     HorizontalAlignment="Left" Margin="0,5"/>
            
            <TextBlock Grid.Column="0" Grid.Row="2" Text="Отчество:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" 
                     Name="LastNamePatientTextBox" Width="200" 
                     HorizontalAlignment="Left" Margin="0,5"/>
            
            <TextBlock Grid.Column="0" Grid.Row="3" Text="День рождения:" VerticalAlignment="Center"/>
            <CalendarDatePicker Grid.Row="3" Grid.Column="1" 
                     Name="BirthdayPatientTextBox"
                     HorizontalAlignment="Left" Margin="0,5"/>
            
            <TextBlock Grid.Column="0" Grid.Row="4" Text="Причина приема:" Margin="0,5,0,0"/>
            <TextBox Grid.Row="4" Grid.Column="1" 
                     Name="ReasonPatientTextBox" Width="300"  Height="70"
                     HorizontalAlignment="Left" Margin="0,5"/>
            <Button Grid.Column="0" Grid.Row="5" 
                    Content="Записать" Click="CreateAnAppointmentButton"/>
        </Grid>
        </StackPanel>
    </DockPanel>
</Window>
